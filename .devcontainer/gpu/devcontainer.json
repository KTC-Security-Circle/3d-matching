{
  "name": "3D Matching DevContainer",
  "dockerComposeFile": [
    "docker-compose.yml",
    "docker-compose.gpu.yml"
  ],
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest",
      "noVncVersion": "1.2.0",
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "service": "app-dev",
  "workspaceFolder": "/app",
  "remoteUser": "vscode",
  "mounts": [
    {
      "type": "volume",
      "target": "${containerWorkspaceFolder}/.venv"
    }
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.renderWhitespace": "all"
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  },
  "postAttachCommand": "sudo chown -R vscode:vscode /app && uv sync",
  "forwardPorts": [6080]
}